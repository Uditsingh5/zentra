# Server
ENVIRONMENT=development
NODE_ENV=development
PORT=8000

# CORS / frontend URL (production: set to your client URL)
CLIENT_ORIGIN=http://localhost:5173

# MongoDB Atlas
MONGO_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority&appName=Zentra

